{
  "name": "provanya-pos",
  "version": "1.0.0",
  "description": "PROVANYA POS - Standalone Desktop Point of Sale Application",
  "main": "src/main.js",
  "homepage": "./",
  "author": "PROVANYA",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.19.4",
    "npm": ">=10.8.2"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev:watch": "nodemon --exec \"npm run dev\" --watch src --ext js,html,css",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "npm run build-win",
    "clean": "rimraf dist node_modules/.cache",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "build": {
    "appId": "com.provanya.pos",
    "productName": "PROVANYA POS",
    "directories": {
      "app": ".",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PROVANYAPOS",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.6.0",
    "chart.js": "^4.5.0",
    "chokidar": "^3.6.0",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.4.2",
    "electron-store": "^8.1.0",
    "express": "^4.21.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "serialport": "^12.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.10"
  }
}
